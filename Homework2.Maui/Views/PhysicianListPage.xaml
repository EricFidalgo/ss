<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Homework2.Maui.Models"
             x:Class="Homework2.Maui.Views.PhysicianListPage"
             Title="Physicians"
             BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource OffBlack}}">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add Physician" 
                     Clicked="OnAddPhysicianClicked"
                     Order="Primary"
                     Priority="0">
            <ToolbarItem.IconImageSource>
                <FontImageSource 
                    Glyph="+" 
                    FontFamily="OpenSansRegular"
                    Color="{StaticResource Primary}"/>
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto,*" Padding="15">
        <Frame Grid.Row="0" 
               BackgroundColor="{StaticResource Primary}"
               CornerRadius="15"
               Padding="20"
               Margin="0,0,0,15"
               HasShadow="True">
            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="15">
                <Frame Grid.Column="0"
                       BackgroundColor="White"
                       CornerRadius="30"
                       Padding="15"
                       HasShadow="False"
                       WidthRequest="60"
                       HeightRequest="60">
                    <Label Text="ðŸ©º" 
                           FontSize="30"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </Frame>
                <VerticalStackLayout Grid.Column="1" 
                                   VerticalOptions="Center"
                                   Spacing="5">
                    <Label Text="Physician Management" 
                           FontSize="22" 
                           FontAttributes="Bold"
                           TextColor="White"/>
                    <Label x:Name="PhysicianCountLabel"
                           Text="0 physicians registered" 
                           FontSize="15"
                           TextColor="White"
                           Opacity="0.9"/>
                </VerticalStackLayout>
            </Grid>
        </Frame>

        <CollectionView Grid.Row="1"
                        x:Name="physiciansCollectionView"
                        SelectionMode="None"
                        EmptyView="No physicians found. Tap 'Add Physician' to create one.">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Physician">
                    <Frame Padding="0" 
                           Margin="0,0,0,12" 
                           BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
                           BorderColor="{StaticResource Gray200}"
                           CornerRadius="15"
                           HasShadow="True">
                        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" 
                              ColumnDefinitions="Auto,*"
                              Padding="15"
                              RowSpacing="10"
                              ColumnSpacing="12">
                            
                            <Frame Grid.Row="0" Grid.Column="0" Grid.RowSpan="2"
                                   BackgroundColor="{StaticResource Secondary}"
                                   CornerRadius="35"
                                   Padding="15"
                                   HasShadow="False"
                                   WidthRequest="70"
                                   HeightRequest="70"
                                   VerticalOptions="Start">
                                <Label Text="ðŸ©º" 
                                       FontSize="35"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Frame>
                            
                            <Label Grid.Row="0" Grid.Column="1"
                                   Text="{Binding name, StringFormat='Dr. {0}'}" 
                                   IsVisible="{Binding IsNotEditing}"
                                   FontSize="20" 
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                                   VerticalOptions="End"/>
                            
                            <Entry Grid.Row="0" Grid.Column="1"
                                   Text="{Binding name}"
                                   IsVisible="{Binding IsEditing}"
                                   Placeholder="Name"
                                   FontSize="16"
                                   VerticalOptions="End"/>
                            
                            <Label Grid.Row="1" Grid.Column="1"
                                   Text="{Binding SpecializationText}" 
                                   IsVisible="{Binding IsNotEditing}"
                                   FontSize="14"
                                   TextColor="{StaticResource Gray500}"
                                   VerticalOptions="Start"/>
                            
                            <Entry Grid.Row="1" Grid.Column="1"
                                   Text="{Binding SpecializationText}"
                                   IsVisible="{Binding IsEditing}"
                                   Placeholder="Specialization (comma separated)"
                                   FontSize="14"
                                   VerticalOptions="Start"/>
                            
                            <BoxView Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                     HeightRequest="1"
                                     Color="{StaticResource Gray200}"
                                     Margin="0,5,0,5"/>
                            
                            <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                  RowDefinitions="Auto,Auto"
                                  ColumnDefinitions="Auto,*"
                                  RowSpacing="8"
                                  ColumnSpacing="10">
                                
                                <Frame Grid.Row="0" Grid.Column="0"
                                       BackgroundColor="{StaticResource Gray100}"
                                       CornerRadius="20"
                                       Padding="8"
                                       HasShadow="False"
                                       WidthRequest="36"
                                       HeightRequest="36">
                                    <Label Text="ðŸ“œ" FontSize="16" 
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Frame>
                                <VerticalStackLayout Grid.Row="0" Grid.Column="1" 
                                                   VerticalOptions="Center">
                                    <Label Text="License Number" 
                                           FontSize="11"
                                           TextColor="{StaticResource Gray500}"
                                           FontAttributes="Bold"/>
                                    <Label Text="{Binding license_number}" 
                                           IsVisible="{Binding IsNotEditing}"
                                           FontSize="14"
                                           TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"/>
                                    <Entry Text="{Binding license_number}"
                                           IsVisible="{Binding IsEditing}"
                                           FontSize="14"/>
                                </VerticalStackLayout>
                                
                                <Frame Grid.Row="1" Grid.Column="0"
                                       BackgroundColor="{StaticResource Gray100}"
                                       CornerRadius="20"
                                       Padding="8"
                                       HasShadow="False"
                                       WidthRequest="36"
                                       HeightRequest="36">
                                    <Label Text="ðŸŽ“" FontSize="16"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Frame>
                                <VerticalStackLayout Grid.Row="1" Grid.Column="1"
                                                   VerticalOptions="Center">
                                    <Label Text="Graduated" 
                                           FontSize="11"
                                           TextColor="{StaticResource Gray500}"
                                           FontAttributes="Bold"/>
                                    <Label Text="{Binding graduation, StringFormat='{0:MMMM dd, yyyy}'}" 
                                           IsVisible="{Binding IsNotEditing}"
                                           FontSize="14"
                                           TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"/>
                                    <DatePicker Date="{Binding graduation}"
                                                IsVisible="{Binding IsEditing}"
                                                FontSize="14"/>
                                </VerticalStackLayout>
                            </Grid>

                            <Grid Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                                  ColumnDefinitions="*,*,*"
                                  ColumnSpacing="8"
                                  Margin="0,10,0,0">
                                
                                <Button x:Name="EditInlineButton"
                                        Grid.Column="0"
                                        Clicked="OnInlineEditClicked"
                                        CommandParameter="{Binding .}"
                                        FontSize="12"
                                        Padding="8,5"
                                        TextColor="White"
                                        CornerRadius="8">
                                    <Button.Triggers>
                                        <DataTrigger TargetType="Button" Binding="{Binding IsEditing}" Value="True">
                                            <Setter Property="Text" Value="ðŸ’¾ Save" />
                                            <Setter Property="BackgroundColor" Value="Green" />
                                        </DataTrigger>
                                        <DataTrigger TargetType="Button" Binding="{Binding IsEditing}" Value="False">
                                            <Setter Property="Text" Value="âœï¸ Edit Inline" />
                                            <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
                                        </DataTrigger>
                                    </Button.Triggers>
                                </Button>

                                <Button Grid.Column="1"
                                        Text="ðŸš« Cancel"
                                        Clicked="OnInlineCancelClicked"
                                        CommandParameter="{Binding .}"
                                        IsVisible="{Binding IsEditing}"
                                        FontSize="12"
                                        Padding="8,5"
                                        BackgroundColor="Gray"
                                        TextColor="White"
                                        CornerRadius="8"/>

                                <Button Grid.Column="1"
                                        Text="ðŸ“ Edit Dialog"
                                        Clicked="OnDialogEditClicked"
                                        CommandParameter="{Binding .}"
                                        IsVisible="{Binding IsNotEditing}"
                                        FontSize="12"
                                        Padding="8,5"
                                        BackgroundColor="{StaticResource Secondary}"
                                        TextColor="{StaticResource Primary}"
                                        CornerRadius="8"/>
                                
                                <Button Grid.Column="2"
                                        Text="ðŸ—‘ï¸ Delete"
                                        Clicked="OnInlineDeleteClicked"
                                        CommandParameter="{Binding .}"
                                        IsVisible="{Binding IsNotEditing}"
                                        FontSize="12"
                                        Padding="8,5"
                                        BackgroundColor="#DC3545"
                                        TextColor="White"
                                        CornerRadius="8"/>
                            </Grid>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
    
</ContentPage>