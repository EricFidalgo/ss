<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Homework2.Maui.Models"
             x:Class="Homework2.Maui.Views.PhysicianListPage"
             Title="Physicians"
             BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource OffBlack}}">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add Physician" 
                     Clicked="OnAddPhysicianClicked"
                     Order="Primary"
                     Priority="0">
            <ToolbarItem.IconImageSource>
                <FontImageSource 
                    Glyph="+" 
                    FontFamily="OpenSansRegular"
                    Color="{StaticResource Primary}"/>
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto,*" Padding="15">
        <!-- Header Section -->
        <Frame Grid.Row="0" 
               BackgroundColor="{StaticResource Primary}"
               CornerRadius="15"
               Padding="20"
               Margin="0,0,0,15"
               HasShadow="True">
            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="15">
                <Frame Grid.Column="0"
                       BackgroundColor="White"
                       CornerRadius="30"
                       Padding="15"
                       HasShadow="False"
                       WidthRequest="60"
                       HeightRequest="60">
                    <Label Text="ðŸ©º" 
                           FontSize="30"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </Frame>
                <VerticalStackLayout Grid.Column="1" 
                                   VerticalOptions="Center"
                                   Spacing="5">
                    <Label Text="Physician Management" 
                           FontSize="22" 
                           FontAttributes="Bold"
                           TextColor="White"/>
                    <Label x:Name="PhysicianCountLabel"
                           Text="0 physicians registered" 
                           FontSize="15"
                           TextColor="White"
                           Opacity="0.9"/>
                </VerticalStackLayout>
            </Grid>
        </Frame>

        <!-- Physician List -->
        <CollectionView Grid.Row="1"
                        x:Name="physiciansCollectionView"
                        SelectionMode="Single"
                        SelectionChanged="OnPhysicianSelected"
                        EmptyView="No physicians found. Tap 'Add Physician' to create one.">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Physician">
                    <Frame Padding="0" 
                           Margin="0,0,0,12" 
                           BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
                           BorderColor="{StaticResource Gray200}"
                           CornerRadius="15"
                           HasShadow="True">
                        <Grid RowDefinitions="Auto,Auto,Auto,Auto" 
                              ColumnDefinitions="Auto,*,Auto"
                              Padding="15"
                              RowSpacing="10"
                              ColumnSpacing="12">
                            
                            <!-- Profile Icon -->
                            <Frame Grid.Row="0" Grid.Column="0" Grid.RowSpan="2"
                                   BackgroundColor="{StaticResource Secondary}"
                                   CornerRadius="35"
                                   Padding="15"
                                   HasShadow="False"
                                   WidthRequest="70"
                                   HeightRequest="70"
                                   VerticalOptions="Start">
                                <Label Text="ðŸ‘¨â€âš•ï¸" 
                                       FontSize="35"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Frame>
                            
                            <!-- Physician Name -->
                            <Label Grid.Row="0" Grid.Column="1"
                                   Text="{Binding name, StringFormat='Dr. {0}'}" 
                                   FontSize="20" 
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                                   VerticalOptions="End"/>
                            
                            <!-- Chevron Icon -->
                            <Label Grid.Row="0" Grid.Column="2" Grid.RowSpan="4"
                                   Text="â€º"
                                   FontSize="32"
                                   TextColor="{StaticResource Gray400}"
                                   VerticalOptions="Center"/>
                            
                            <!-- Physician ID -->
                            <Frame Grid.Row="1" Grid.Column="1"
                                   BackgroundColor="{StaticResource Primary}"
                                   CornerRadius="8"
                                   Padding="8,4"
                                   HasShadow="False"
                                   HorizontalOptions="Start">
                                <Label Text="{Binding Id, StringFormat='ID: {0}'}" 
                                       FontSize="11"
                                       FontAttributes="Bold"
                                       TextColor="White"/>
                            </Frame>
                            
                            <!-- Divider -->
                            <BoxView Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"
                                     HeightRequest="1"
                                     Color="{StaticResource Gray200}"
                                     Margin="0,5,0,5"/>
                            
                            <!-- Info Grid -->
                            <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                  RowDefinitions="Auto,Auto,Auto"
                                  ColumnDefinitions="Auto,*"
                                  RowSpacing="8"
                                  ColumnSpacing="10">
                                
                                <!-- License Number -->
                                <Frame Grid.Row="0" Grid.Column="0"
                                       BackgroundColor="{StaticResource Gray100}"
                                       CornerRadius="20"
                                       Padding="8"
                                       HasShadow="False"
                                       WidthRequest="36"
                                       HeightRequest="36">
                                    <Label Text="ðŸ¥" FontSize="16" 
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Frame>
                                <VerticalStackLayout Grid.Row="0" Grid.Column="1" 
                                                   VerticalOptions="Center">
                                    <Label Text="License Number" 
                                           FontSize="11"
                                           TextColor="{StaticResource Gray500}"
                                           FontAttributes="Bold"/>
                                    <Label Text="{Binding license_number}" 
                                           FontSize="14"
                                           TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"/>
                                </VerticalStackLayout>
                                
                                <!-- Graduation -->
                                <Frame Grid.Row="1" Grid.Column="0"
                                       BackgroundColor="{StaticResource Gray100}"
                                       CornerRadius="20"
                                       Padding="8"
                                       HasShadow="False"
                                       WidthRequest="36"
                                       HeightRequest="36">
                                    <Label Text="ðŸŽ“" FontSize="16"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Frame>
                                <VerticalStackLayout Grid.Row="1" Grid.Column="1"
                                                   VerticalOptions="Center">
                                    <Label Text="Graduated" 
                                           FontSize="11"
                                           TextColor="{StaticResource Gray500}"
                                           FontAttributes="Bold"/>
                                    <Label Text="{Binding graduation, StringFormat='{0:MMMM yyyy}'}" 
                                           FontSize="14"
                                           TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"/>
                                </VerticalStackLayout>
                                
                                <!-- Specializations -->
                                <Frame Grid.Row="2" Grid.Column="0"
                                       BackgroundColor="{StaticResource Gray100}"
                                       CornerRadius="20"
                                       Padding="8"
                                       HasShadow="False"
                                       WidthRequest="36"
                                       HeightRequest="36">
                                    <Label Text="â­" FontSize="16"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Frame>
                                <VerticalStackLayout Grid.Row="2" Grid.Column="1"
                                                   VerticalOptions="Center">
                                    <Label Text="Specializations" 
                                           FontSize="11"
                                           TextColor="{StaticResource Gray500}"
                                           FontAttributes="Bold"/>
                                    <Label FontSize="14"
                                           TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{Binding specializations, Converter={StaticResource ListToStringConverter}}" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </VerticalStackLayout>
                            </Grid>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
    
</ContentPage>