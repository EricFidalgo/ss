<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             x:Class="Homework2.Maui.Views.AppointmentDetailPage"
             Title="Appointment Details"
             BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource OffBlack}}">
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <Frame BackgroundColor="{StaticResource Primary}"
                   CornerRadius="60"
                   Padding="25"
                   HasShadow="False"
                   WidthRequest="120"
                   HeightRequest="120"
                   HorizontalOptions="Center">
                <Label Text="ðŸ“…" 
                       FontSize="60"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Frame>
            
            <Frame Padding="15" 
                   BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
                   BorderColor="{StaticResource Gray200}"
                   CornerRadius="12">
                <VerticalStackLayout Spacing="12">
                    <Label Text="ðŸ‘¤ Select Patient" 
                           FontSize="13"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}"/>
                    
                    <Button x:Name="PatientButton"
                            Text="Select Patient"
                            Clicked="OnSelectPatientClicked"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            CornerRadius="8"/>
                </VerticalStackLayout>
            </Frame>
            
            <Frame Padding="15" 
                   BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
                   BorderColor="{StaticResource Gray200}"
                   CornerRadius="12">
                <VerticalStackLayout Spacing="12">
                    <Label Text="ðŸ“… Select Date" 
                           FontSize="13"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}"/>
                    <Label Text="Appointments available Monday-Friday" 
                           FontSize="11"
                           TextColor="{StaticResource Gray500}"/>
                    <DatePicker x:Name="AppointmentDatePicker" 
                                DateSelected="OnDateSelected"
                                MinimumDate="{x:Static sys:DateTime.Today}"
                                FontSize="16"
                                Format="dddd, MMMM dd, yyyy"/>
                </VerticalStackLayout>
            </Frame>

            <Frame Padding="15" 
                   BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
                   BorderColor="{StaticResource Gray200}"
                   CornerRadius="12">
                <VerticalStackLayout Spacing="12">
                    <Label Text="ðŸ• Available Time Slots" 
                           FontSize="13"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}"/>
                    <Label Text="Select an available hour (8:00 AM - 5:00 PM)" 
                           FontSize="11"
                           TextColor="{StaticResource Gray500}"/>
                    
                    <CollectionView x:Name="TimeSlotsCollectionView"
                                   SelectionMode="Single"
                                   SelectionChanged="OnTimeSlotSelected"
                                   HeightRequest="200">
                        <CollectionView.ItemsLayout>
                             <GridItemsLayout Orientation="Vertical" 
                                           Span="3"
                                           HorizontalItemSpacing="8"
                                           VerticalItemSpacing="8"/>
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="sys:DateTime">
                                <Frame Padding="12" 
                                       BackgroundColor="{StaticResource Primary}"
                                       BorderColor="{StaticResource Primary}"
                                       CornerRadius="10"
                                       HasShadow="False">
                                    <Label Text="{Binding ., StringFormat='{0:h:mm tt}'}" 
                                          FontSize="13"
                                          FontAttributes="Bold"
                                          TextColor="White"
                                          HorizontalOptions="Center"
                                          VerticalOptions="Center"/>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                    
                    <Frame BackgroundColor="{StaticResource Secondary}"
                           Padding="12"
                           CornerRadius="8"
                           HasShadow="False">
                        <Label x:Name="SelectedTimeLabel" 
                              Text="No time selected" 
                              FontSize="14"
                              FontAttributes="Bold"
                              TextColor="{StaticResource Primary}"
                              HorizontalOptions="Center"/>
                    </Frame>
                </VerticalStackLayout>
            </Frame>

            <Frame Padding="15" 
                   BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
                   BorderColor="{StaticResource Gray200}"
                   CornerRadius="12">
                <VerticalStackLayout Spacing="12">
                    <Label Text="ðŸ©º Select Physician" 
                           FontSize="13"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}"/>
                    <Label Text="Choose from physicians available at the selected time" 
                           FontSize="11"
                           TextColor="{StaticResource Gray500}"/>
                    
                    <Button x:Name="PhysicianButton"
                            Text="Select Physician"
                            Clicked="OnSelectPhysicianClicked"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            CornerRadius="8"/>
                </VerticalStackLayout>
            </Frame>

            <Frame x:Name="DiagnosesFrame"
                   Padding="15" 
                   BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
                   BorderColor="{StaticResource Gray200}"
                   CornerRadius="12"
                   IsVisible="False"> <VerticalStackLayout Spacing="12">
                    <Label Text="ðŸ“ Diagnosis Management" 
                           FontSize="13"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}"/>
                    
                    <Grid ColumnDefinitions="*, Auto" ColumnSpacing="10">
                        <Entry x:Name="NewDiagnosisEntry" 
                               Placeholder="Enter new diagnosis"
                               FontSize="14"
                               VerticalOptions="Center"/>
                        <Button Text="Add"
                                Clicked="OnAddDiagnosisClicked"
                                Grid.Column="1"
                                FontSize="12"
                                HeightRequest="40"
                                BackgroundColor="{StaticResource Primary}"
                                TextColor="White"/>
                    </Grid>

                    <Label Text="Patient History:" FontSize="11" TextColor="{StaticResource Gray500}"/>
                    
                    <CollectionView x:Name="DiagnosesCollectionView"
                                    HeightRequest="200"
                                    EmptyView="No diagnoses recorded.">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Padding="10" 
                                       Margin="0,0,0,15" 
                                       BackgroundColor="{StaticResource Secondary}"
                                       BorderColor="Transparent"
                                       CornerRadius="8"
                                       HasShadow="False">
                                    
                                    <Grid ColumnDefinitions="*, Auto" VerticalOptions="Center">
                                        <Label Grid.Column="0" 
                                               Text="{Binding .}" 
                                               FontSize="14"
                                               TextColor="{StaticResource Primary}"/>
                                        
                                        <Button Grid.Column="1"
                                                Text="âœ•"
                                                Clicked="OnDeleteDiagnosisClicked"
                                                BackgroundColor="Transparent"
                                                TextColor="#DC3545"
                                                FontSize="16"
                                                Padding="0"
                                                HeightRequest="30"
                                                WidthRequest="30"/>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>
                
            <VerticalStackLayout Spacing="12" Margin="0,10,0,20">
                <Button Text="ðŸ’¾ Save Appointment" 
                        Clicked="OnSaveClicked"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        FontSize="16"
                        FontAttributes="Bold"
                        HeightRequest="50"
                        CornerRadius="12"/>
                
                <Button x:Name="DeleteButton"
                        Text="ðŸ—‘ï¸ Delete Appointment" 
                        Clicked="OnDeleteClicked"
                        IsVisible="False"
                        BackgroundColor="#DC3545"
                        TextColor="White"
                        FontSize="16"
                        FontAttributes="Bold"
                        HeightRequest="50"
                        CornerRadius="12"/>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>