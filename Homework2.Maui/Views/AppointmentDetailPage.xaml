<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             x:Class="Homework2.Maui.Views.AppointmentDetailPage"
             Title="Appointment Details"
             BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource OffBlack}}">
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <Frame BackgroundColor="{StaticResource Primary}"
                   CornerRadius="60"
                   Padding="25"
                   HasShadow="False"
                   WidthRequest="120"
                   HeightRequest="120"
                   HorizontalOptions="Center">
                <Label Text="ðŸ“…" 
                       FontSize="60"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Frame>
            
            <Frame Padding="15" 
                   BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
                   BorderColor="{StaticResource Gray200}"
                   CornerRadius="12">
                <VerticalStackLayout Spacing="12">
                    <Label Text="ðŸ‘¤ Select Patient" 
                           FontSize="13"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}"/>
                    
                    <Picker x:Name="PatientPicker"
                            Title="Choose a patient"
                            ItemDisplayBinding="{Binding name}"
                            SelectedIndexChanged="OnPatientSelectedIndexChanged"
                            FontSize="15"
                            TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"/>
                </VerticalStackLayout>
            </Frame>
            
            <Frame Padding="15" 
                   BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
                   BorderColor="{StaticResource Gray200}"
                   CornerRadius="12">
                <VerticalStackLayout Spacing="12">
                    <Label Text="ðŸ“… Select Date" 
                           FontSize="13"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}"/>
                    <Label Text="Appointments available Monday-Friday" 
                           FontSize="11"
                           TextColor="{StaticResource Gray500}"/>
                    <DatePicker x:Name="AppointmentDatePicker" 
                                DateSelected="OnDateSelected"
                                MinimumDate="{x:Static sys:DateTime.Today}"
                                FontSize="16"
                                Format="dddd, MMMM dd, yyyy"/>
                </VerticalStackLayout>
            </Frame>

            <Frame Padding="15" 
                   BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
                   BorderColor="{StaticResource Gray200}"
                   CornerRadius="12">
                <VerticalStackLayout Spacing="12">
                    <Label Text="ðŸ• Available Time Slots" 
                           FontSize="13"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}"/>
                    <Label Text="Select an available hour (8:00 AM - 5:00 PM)" 
                           FontSize="11"
                           TextColor="{StaticResource Gray500}"/>
                    
                    <CollectionView x:Name="TimeSlotsCollectionView"
                                   SelectionMode="Single"
                                   SelectionChanged="OnTimeSlotSelected"
                                   HeightRequest="200">
                        <CollectionView.ItemsLayout>
                             <GridItemsLayout Orientation="Vertical" 
                                           Span="3"
                                           HorizontalItemSpacing="8"
                                           VerticalItemSpacing="8"/>
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="sys:DateTime">
                                <Frame Padding="12" 
                                       BackgroundColor="{StaticResource Primary}"
                                       BorderColor="{StaticResource Primary}"
                                       CornerRadius="10"
                                       HasShadow="False">
                                    <Label Text="{Binding ., StringFormat='{0:h:mm tt}'}" 
                                          FontSize="13"
                                          FontAttributes="Bold"
                                          TextColor="White"
                                          HorizontalOptions="Center"
                                          VerticalOptions="Center"/>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                    
                    <Frame BackgroundColor="{StaticResource Secondary}"
                           Padding="12"
                           CornerRadius="8"
                           HasShadow="False">
                        <Label x:Name="SelectedTimeLabel" 
                              Text="No time selected" 
                              FontSize="14"
                              FontAttributes="Bold"
                              TextColor="{StaticResource Primary}"
                              HorizontalOptions="Center"/>
                    </Frame>
                </VerticalStackLayout>
            </Frame>

            <Frame Padding="15" 
                   BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
                   BorderColor="{StaticResource Gray200}"
                   CornerRadius="12">
                <VerticalStackLayout Spacing="12">
                    <Label Text="ðŸ©º Select Physician" 
                           FontSize="13"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}"/>
                    <Label Text="Choose from physicians available at the selected time" 
                           FontSize="11"
                           TextColor="{StaticResource Gray500}"/>
                    
                    <Picker x:Name="PhysicianPicker"
                            Title="Choose a physician"
                            ItemDisplayBinding="{Binding name}"
                            SelectedIndexChanged="OnPhysicianSelectedIndexChanged"
                            FontSize="15"
                            TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"/>
                </VerticalStackLayout>
            </Frame>

            <VerticalStackLayout Spacing="12" Margin="0,10,0,20">
                <Button Text="ðŸ’¾ Save Appointment" 
                        Clicked="OnSaveClicked"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        FontSize="16"
                        FontAttributes="Bold"
                        HeightRequest="50"
                        CornerRadius="12"/>
                
                <Button x:Name="DeleteButton"
                        Text="ðŸ—‘ï¸ Delete Appointment" 
                        Clicked="OnDeleteClicked"
                        IsVisible="False"
                        BackgroundColor="#DC3545"
                        TextColor="White"
                        FontSize="16"
                        FontAttributes="Bold"
                        HeightRequest="50"
                        CornerRadius="12"/>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>