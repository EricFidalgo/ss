<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Homework2.Maui.Views.PatientDetailPage"
             Title="Patient Details">
    
    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Name" />
        <Entry x:Name="NameEntry" Placeholder="Patient name" />

        <Label Text="Address" />
        <Entry x:Name="AddressEntry" Placeholder="Patient address" />
        
        <Label Text="Birthdate" />
        <DatePicker x:Name="BirthdatePicker" />

        <Label Text="Race" />
        <Entry x:Name="RaceEntry" Placeholder="Patient race" />
        
        <Label Text="Gender" />
        <Entry x:Name="GenderEntry" Placeholder="M/F" />

        <Button Text="Save" Clicked="OnSaveClicked" />
        <Button x:Name="DeleteButton" Text="Delete" Clicked="OnDeleteClicked" IsVisible="False" BackgroundColor="Red" />
    </VerticalStackLayout>
    
</ContentPage>