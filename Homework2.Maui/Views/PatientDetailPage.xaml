<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Homework2.Maui.Views.PatientDetailPage"
             Title="Patient Details"
             BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource OffBlack}}">
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <!-- Header Icon -->
            <Frame BackgroundColor="{StaticResource Primary}"
                   CornerRadius="60"
                   Padding="25"
                   HasShadow="False"
                   WidthRequest="120"
                   HeightRequest="120"
                   HorizontalOptions="Center">
                <Label Text="ðŸ‘¤" 
                       FontSize="60"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Frame>
            
            <!-- Name Section -->
            <Frame Padding="15" 
                   BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
                   BorderColor="{StaticResource Gray200}"
                   CornerRadius="12">
                <VerticalStackLayout Spacing="8">
                    <Label Text="ðŸ‘¤ Full Name" 
                           FontSize="13"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}"/>
                    <Entry x:Name="NameEntry" 
                           Placeholder="Enter patient's full name"
                           FontSize="16"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Address Section -->
            <Frame Padding="15" 
                   BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
                   BorderColor="{StaticResource Gray200}"
                   CornerRadius="12">
                <VerticalStackLayout Spacing="8">
                    <Label Text="ðŸ“ Address" 
                           FontSize="13"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}"/>
                    <Entry x:Name="AddressEntry" 
                           Placeholder="Enter full address"
                           FontSize="16"/>
                </VerticalStackLayout>
            </Frame>
            
            <!-- Birthdate Section -->
            <Frame Padding="15" 
                   BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
                   BorderColor="{StaticResource Gray200}"
                   CornerRadius="12">
                <VerticalStackLayout Spacing="8">
                    <Label Text="ðŸŽ‚ Date of Birth" 
                           FontSize="13"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}"/>
                    <DatePicker x:Name="BirthdatePicker" 
                                FontSize="16"
                                Format="MMMM dd, yyyy"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Demographics Section -->
            <Frame Padding="15" 
                   BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
                   BorderColor="{StaticResource Gray200}"
                   CornerRadius="12">
                <Grid RowDefinitions="Auto,Auto,Auto,Auto" 
                      RowSpacing="15">
                    <Label Grid.Row="0"
                           Text="â„¹ï¸ Demographics" 
                           FontSize="13"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}"/>
                    
                    <VerticalStackLayout Grid.Row="1" Spacing="8">
                        <Label Text="Race/Ethnicity" 
                               FontSize="12"
                               TextColor="{StaticResource Gray600}"/>
                        <Entry x:Name="RaceEntry" 
                               Placeholder="e.g., Caucasian, Hispanic, Asian"
                               FontSize="16"/>
                    </VerticalStackLayout>
                    
                    <VerticalStackLayout Grid.Row="2" Spacing="8">
                        <Label Text="Gender" 
                               FontSize="12"
                               TextColor="{StaticResource Gray600}"/>
                        <Entry x:Name="GenderEntry" 
                               Placeholder="e.g., Male, Female, Other"
                               FontSize="16"/>
                    </VerticalStackLayout>
                </Grid>
            </Frame>

            <!-- Action Buttons -->
            <VerticalStackLayout Spacing="12" Margin="0,10,0,20">
                <Button Text="ðŸ’¾ Save Patient" 
                        Clicked="OnSaveClicked"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        FontSize="16"
                        FontAttributes="Bold"
                        HeightRequest="50"
                        CornerRadius="12"/>
                
                <Button x:Name="DeleteButton"
                        Text="ðŸ—‘ï¸ Delete Patient" 
                        Clicked="OnDeleteClicked"
                        IsVisible="False"
                        BackgroundColor="#DC3545"
                        TextColor="White"
                        FontSize="16"
                        FontAttributes="Bold"
                        HeightRequest="50"
                        CornerRadius="12"/>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>