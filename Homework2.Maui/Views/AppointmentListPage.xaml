<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Homework2.Maui.Models"
             x:Class="Homework2.Maui.Views.AppointmentListPage"
             Title="Appointments"
             BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource OffBlack}}">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add Appointment" 
                     Clicked="OnAddAppointmentClicked"
                     Order="Primary"
                     Priority="0">
            <ToolbarItem.IconImageSource>
                <FontImageSource 
                    Glyph="+" 
                    FontFamily="OpenSansRegular"
                    Color="{StaticResource Primary}"/>
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto,*" Padding="15">
        <!-- Header Section -->
        <Frame Grid.Row="0" 
               BackgroundColor="{StaticResource Primary}"
               CornerRadius="15"
               Padding="20"
               Margin="0,0,0,15"
               HasShadow="True">
            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="15">
                <Frame Grid.Column="0"
                       BackgroundColor="White"
                       CornerRadius="30"
                       Padding="15"
                       HasShadow="False"
                       WidthRequest="60"
                       HeightRequest="60">
                    <Label Text="ðŸ“…" 
                           FontSize="30"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </Frame>
                <VerticalStackLayout Grid.Column="1" 
                                   VerticalOptions="Center"
                                   Spacing="5">
                    <Label Text="Appointment Management" 
                           FontSize="22" 
                           FontAttributes="Bold"
                           TextColor="White"/>
                    <Label x:Name="AppointmentCountLabel"
                           Text="0 appointments scheduled" 
                           FontSize="15"
                           TextColor="White"
                           Opacity="0.9"/>
                </VerticalStackLayout>
            </Grid>
        </Frame>

        <!-- Appointment List -->
        <CollectionView Grid.Row="1"
                        x:Name="appointmentsCollectionView"
                        SelectionMode="Single"
                        SelectionChanged="OnAppointmentSelected"
                        EmptyView="No appointments scheduled. Tap 'Add Appointment' to create one.">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Appointment">
                    <Frame Padding="0" 
                           Margin="0,0,0,12" 
                           BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
                           BorderColor="{StaticResource Gray200}"
                           CornerRadius="15"
                           HasShadow="True">
                        <Grid RowDefinitions="Auto,Auto,Auto,Auto" 
                              ColumnDefinitions="Auto,*,Auto"
                              Padding="15"
                              RowSpacing="12"
                              ColumnSpacing="12">
                            
                            <!-- Calendar Icon -->
                            <Frame Grid.Row="0" Grid.Column="0" Grid.RowSpan="2"
                                   BackgroundColor="{StaticResource Primary}"
                                   CornerRadius="12"
                                   Padding="10"
                                   HasShadow="False"
                                   WidthRequest="70"
                                   HeightRequest="70"
                                   VerticalOptions="Start">
                                <VerticalStackLayout Spacing="0" 
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center">
                                    <Label Text="{Binding hour, StringFormat='{0:MMM}'}" 
                                           FontSize="12"
                                           FontAttributes="Bold"
                                           TextColor="White"
                                           HorizontalOptions="Center"/>
                                    <Label Text="{Binding hour, StringFormat='{0:dd}'}" 
                                           FontSize="24"
                                           FontAttributes="Bold"
                                           TextColor="White"
                                           HorizontalOptions="Center"/>
                                </VerticalStackLayout>
                            </Frame>
                            
                            <!-- Appointment Time -->
                            <Label Grid.Row="0" Grid.Column="1"
                                   Text="{Binding hour, StringFormat='{0:h:mm tt}'}" 
                                   FontSize="20" 
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                                   VerticalOptions="End"/>
                            
                            <!-- Chevron Icon -->
                            <Label Grid.Row="0" Grid.Column="2" Grid.RowSpan="4"
                                   Text="â€º"
                                   FontSize="32"
                                   TextColor="{StaticResource Gray400}"
                                   VerticalOptions="Center"/>
                            
                            <!-- Date Display -->
                            <Label Grid.Row="1" Grid.Column="1"
                                   Text="{Binding hour, StringFormat='{0:dddd, MMMM dd, yyyy}'}" 
                                   FontSize="13"
                                   TextColor="{StaticResource Gray600}"
                                   VerticalOptions="Start"/>
                            
                            <!-- Divider -->
                            <BoxView Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"
                                     HeightRequest="1"
                                     Color="{StaticResource Gray200}"
                                     Margin="0,5,0,5"/>
                            
                            <!-- Info Grid -->
                            <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                  RowDefinitions="Auto,Auto"
                                  ColumnDefinitions="Auto,*"
                                  RowSpacing="10"
                                  ColumnSpacing="10">
                                
                                <!-- Patient Info -->
                                <Frame Grid.Row="0" Grid.Column="0"
                                       BackgroundColor="{StaticResource Secondary}"
                                       CornerRadius="20"
                                       Padding="8"
                                       HasShadow="False"
                                       WidthRequest="36"
                                       HeightRequest="36">
                                    <Label Text="ðŸ‘¤" FontSize="16" 
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Frame>
                                <VerticalStackLayout Grid.Row="0" Grid.Column="1" 
                                                   VerticalOptions="Center">
                                    <Label Text="Patient" 
                                           FontSize="11"
                                           TextColor="{StaticResource Gray500}"
                                           FontAttributes="Bold"/>
                                    <Label Text="{Binding patients.name}" 
                                           FontSize="15"
                                           FontAttributes="Bold"
                                           TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"/>
                                </VerticalStackLayout>
                                
                                <!-- Physician Info -->
                                <Frame Grid.Row="1" Grid.Column="0"
                                       BackgroundColor="{StaticResource Secondary}"
                                       CornerRadius="20"
                                       Padding="8"
                                       HasShadow="False"
                                       WidthRequest="36"
                                       HeightRequest="36">
                                    <Label Text="ðŸ©º" FontSize="16"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Frame>
                                <VerticalStackLayout Grid.Row="1" Grid.Column="1"
                                                   VerticalOptions="Center">
                                    <Label Text="Physician" 
                                           FontSize="11"
                                           TextColor="{StaticResource Gray500}"
                                           FontAttributes="Bold"/>
                                    <Label Text="{Binding physicians.name, StringFormat='Dr. {0}'}" 
                                           FontSize="15"
                                           FontAttributes="Bold"
                                           TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"/>
                                </VerticalStackLayout>
                            </Grid>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
    
</ContentPage>