<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Homework2.Maui.Models"
             x:Class="Homework2.Maui.Views.AppointmentListPage"
             Title="Appointments"
             BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource OffBlack}}">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add Appointment" 
                     Clicked="OnAddAppointmentClicked"
                     Order="Primary"
                     Priority="0">
            <ToolbarItem.IconImageSource>
                <FontImageSource 
                    Glyph="+" 
                    FontFamily="OpenSansRegular"
                    Color="{StaticResource Primary}"/>
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto,*" Padding="15">
        <!-- Header Section -->
        <Frame Grid.Row="0" 
               BackgroundColor="{StaticResource Primary}"
               CornerRadius="15"
               Padding="20"
               Margin="0,0,0,15"
               HasShadow="True">
            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="15">
                <Frame Grid.Column="0"
                       BackgroundColor="White"
                       CornerRadius="30"
                       Padding="15"
                       HasShadow="False"
                       WidthRequest="60"
                       HeightRequest="60">
                    <Label Text="ðŸ“…" 
                           FontSize="30"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </Frame>
                <VerticalStackLayout Grid.Column="1" 
                                   VerticalOptions="Center"
                                   Spacing="5">
                    <Label Text="Appointment Management" 
                           FontSize="22" 
                           FontAttributes="Bold"
                           TextColor="White"/>
                    <Label x:Name="AppointmentCountLabel"
                           Text="0 appointments scheduled" 
                           FontSize="15"
                           TextColor="White"
                           Opacity="0.9"/>
                </VerticalStackLayout>
            </Grid>
        </Frame>

        <!-- Appointment List -->
        <CollectionView Grid.Row="1"
                        x:Name="appointmentsCollectionView"
                        SelectionMode="None"
                        EmptyView="No appointments scheduled. Tap 'Add Appointment' to create one.">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Appointment">
                    <Frame Padding="0" 
                           Margin="0,0,0,12" 
                           BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
                           BorderColor="{StaticResource Gray200}"
                           CornerRadius="15"
                           HasShadow="True">
                        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" 
                              ColumnDefinitions="Auto,*"
                              Padding="15"
                              RowSpacing="12"
                              ColumnSpacing="12">
                            
                            <!-- Calendar Icon -->
                            <Frame Grid.Row="0" Grid.Column="0" Grid.RowSpan="2"
                                   BackgroundColor="{StaticResource Primary}"
                                   CornerRadius="12"
                                   Padding="10"
                                   HasShadow="False"
                                   WidthRequest="70"
                                   HeightRequest="70"
                                   VerticalOptions="Start">
                                <VerticalStackLayout Spacing="0" 
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center">
                                    <Label Text="{Binding hour, StringFormat='{0:MMM}'}" 
                                           FontSize="12"
                                           FontAttributes="Bold"
                                           TextColor="White"
                                           HorizontalOptions="Center"/>
                                    <Label Text="{Binding hour, StringFormat='{0:dd}'}" 
                                           FontSize="24"
                                           FontAttributes="Bold"
                                           TextColor="White"
                                           HorizontalOptions="Center"/>
                                </VerticalStackLayout>
                            </Frame>
                            
                            <!-- VIEW MODE: Appointment Time -->
                            <Label x:Name="TimeLabel"
                                   Grid.Row="0" Grid.Column="1"
                                   Text="{Binding hour, StringFormat='{0:h:mm tt}'}" 
                                   FontSize="20" 
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                                   VerticalOptions="End"/>
                            
                            <!-- EDIT MODE: Time Picker Button -->
                            <Button x:Name="TimeButton"
                                    Grid.Row="0" Grid.Column="1"
                                    Text="Select Time"
                                    IsVisible="False"
                                    Clicked="OnTimeButtonClicked"
                                    FontSize="14"
                                    Padding="8,5"
                                    VerticalOptions="End"
                                    HorizontalOptions="Start"
                                    BackgroundColor="{StaticResource Primary}"
                                    TextColor="White"/>
                            
                            <!-- VIEW MODE: Date Display -->
                            <Label x:Name="DateLabel"
                                   Grid.Row="1" Grid.Column="1"
                                   Text="{Binding hour, StringFormat='{0:dddd, MMMM dd, yyyy}'}" 
                                   FontSize="13"
                                   TextColor="{StaticResource Gray600}"
                                   VerticalOptions="Start"/>
                            
                            <!-- EDIT MODE: Date Picker -->
                            <DatePicker x:Name="DatePicker"
                                        Grid.Row="1" Grid.Column="1"
                                        Date="{Binding hour}"
                                        IsVisible="False"
                                        FontSize="13"
                                        VerticalOptions="Start"/>
                            
                            <!-- Divider -->
                            <BoxView Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                     HeightRequest="1"
                                     Color="{StaticResource Gray200}"
                                     Margin="0,5,0,5"/>
                            
                            <!-- Info Grid -->
                            <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                  RowDefinitions="Auto,Auto"
                                  ColumnDefinitions="Auto,*"
                                  RowSpacing="10"
                                  ColumnSpacing="10">
                                
                                <!-- Patient Info -->
                                <Frame Grid.Row="0" Grid.Column="0"
                                       BackgroundColor="{StaticResource Secondary}"
                                       CornerRadius="20"
                                       Padding="8"
                                       HasShadow="False"
                                       WidthRequest="36"
                                       HeightRequest="36">
                                    <Label Text="ðŸ‘¤" FontSize="16" 
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Frame>
                                <VerticalStackLayout Grid.Row="0" Grid.Column="1" 
                                                   VerticalOptions="Center">
                                    <Label Text="Patient" 
                                           FontSize="11"
                                           TextColor="{StaticResource Gray500}"
                                           FontAttributes="Bold"/>
                                    <!-- VIEW MODE -->
                                    <Label x:Name="PatientLabel"
                                           Text="{Binding patients.name}" 
                                           FontSize="15"
                                           FontAttributes="Bold"
                                           TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"/>
                                    <!-- EDIT MODE -->
                                    <Button x:Name="PatientButton"
                                            Text="Select Patient"
                                            IsVisible="False"
                                            Clicked="OnPatientButtonClicked"
                                            FontSize="13"
                                            Padding="8,4"
                                            HorizontalOptions="Start"
                                            BackgroundColor="{StaticResource Primary}"
                                            TextColor="White"/>
                                </VerticalStackLayout>
                                
                                <!-- Physician Info -->
                                <Frame Grid.Row="1" Grid.Column="0"
                                       BackgroundColor="{StaticResource Secondary}"
                                       CornerRadius="20"
                                       Padding="8"
                                       HasShadow="False"
                                       WidthRequest="36"
                                       HeightRequest="36">
                                    <Label Text="ðŸ©º" FontSize="16"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Frame>
                                <VerticalStackLayout Grid.Row="1" Grid.Column="1"
                                                   VerticalOptions="Center">
                                    <Label Text="Physician" 
                                           FontSize="11"
                                           TextColor="{StaticResource Gray500}"
                                           FontAttributes="Bold"/>
                                    <!-- VIEW MODE -->
                                    <Label x:Name="PhysicianLabel"
                                           Text="{Binding physicians.name, StringFormat='Dr. {0}'}" 
                                           FontSize="15"
                                           FontAttributes="Bold"
                                           TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"/>
                                    <!-- EDIT MODE -->
                                    <Button x:Name="PhysicianButton"
                                            Text="Select Physician"
                                            IsVisible="False"
                                            Clicked="OnPhysicianButtonClicked"
                                            FontSize="13"
                                            Padding="8,4"
                                            HorizontalOptions="Start"
                                            BackgroundColor="{StaticResource Primary}"
                                            TextColor="White"/>
                                </VerticalStackLayout>
                            </Grid>

                            <!-- Error Message (for edit mode validation) -->
                            <Label x:Name="ErrorLabel"
                                   Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                                   IsVisible="False"
                                   Text=""
                                   TextColor="Red"
                                   FontSize="12"
                                   HorizontalOptions="Center"/>

                            <!-- Inline Action Buttons -->
                            <Grid Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"
                                  ColumnDefinitions="*,*,*"
                                  ColumnSpacing="8"
                                  Margin="0,10,0,0">
                                <Button x:Name="EditInlineButton"
                                        Grid.Column="0"
                                        Text="âœï¸ Edit Inline"
                                        Clicked="OnInlineEditClicked"
                                        CommandParameter="{Binding .}"
                                        FontSize="12"
                                        Padding="8,5"
                                        BackgroundColor="{StaticResource Primary}"
                                        TextColor="White"
                                        CornerRadius="8"/>
                                <Button Grid.Column="1"
                                        Text="ðŸ“ Edit Dialog"
                                        Clicked="OnDialogEditClicked"
                                        CommandParameter="{Binding .}"
                                        FontSize="12"
                                        Padding="8,5"
                                        BackgroundColor="{StaticResource Secondary}"
                                        TextColor="{StaticResource Primary}"
                                        CornerRadius="8"/>
                                <Button Grid.Column="2"
                                        Text="ðŸ—‘ï¸ Delete"
                                        Clicked="OnInlineDeleteClicked"
                                        CommandParameter="{Binding .}"
                                        FontSize="12"
                                        Padding="8,5"
                                        BackgroundColor="#DC3545"
                                        TextColor="White"
                                        CornerRadius="8"/>
                            </Grid>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
    
</ContentPage>