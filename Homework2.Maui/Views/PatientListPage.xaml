<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Homework2.Maui.Views.PatientListPage"
             xmlns:models="clr-namespace:Homework2.Maui.Models"
             Title="Patients">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add" Clicked="OnAddPatientClicked" />
    </ContentPage.ToolbarItems>

    <CollectionView x:Name="patientsCollectionView"
                    SelectionMode="Single"
                    SelectionChanged="OnPatientSelected">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="models:Patient">
                <Grid Padding="10">
                    <VerticalStackLayout>
                        <Label Text="{Binding name}" FontSize="Medium" FontAttributes="Bold" />
                        <Label Text="{Binding address}" FontSize="Small" />
                    </VerticalStackLayout>
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
    
</ContentPage>