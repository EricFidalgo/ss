<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Homework2.Maui.Views.PhysicianDetailPage"
             Title="Physician Details"
             BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource OffBlack}}">
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <!-- Header Icon -->
            <Frame BackgroundColor="{StaticResource Primary}"
                   CornerRadius="60"
                   Padding="25"
                   HasShadow="False"
                   WidthRequest="120"
                   HeightRequest="120"
                   HorizontalOptions="Center">
                <Label Text="ðŸ‘¨â€âš•ï¸" 
                       FontSize="60"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Frame>
            
            <!-- Name Section -->
            <Frame Padding="15" 
                   BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
                   BorderColor="{StaticResource Gray200}"
                   CornerRadius="12">
                <VerticalStackLayout Spacing="8">
                    <Label Text="ðŸ‘¨â€âš•ï¸ Physician Name" 
                           FontSize="13"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}"/>
                    <Entry x:Name="NameEntry" 
                           Placeholder="Enter physician's full name"
                           FontSize="16"/>
                </VerticalStackLayout>
            </Frame>

            <!-- License Section -->
            <Frame Padding="15" 
                   BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
                   BorderColor="{StaticResource Gray200}"
                   CornerRadius="12">
                <VerticalStackLayout Spacing="8">
                    <Label Text="ðŸ¥ Medical License Number" 
                           FontSize="13"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}"/>
                    <Entry x:Name="LicenseEntry" 
                           Placeholder="Enter license number"
                           FontSize="16"/>
                </VerticalStackLayout>
            </Frame>
            
            <!-- Graduation Section -->
            <Frame Padding="15" 
                   BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
                   BorderColor="{StaticResource Gray200}"
                   CornerRadius="12">
                <VerticalStackLayout Spacing="8">
                    <Label Text="ðŸŽ“ Graduation Date" 
                           FontSize="13"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}"/>
                    <DatePicker x:Name="GraduationPicker" 
                                FontSize="16"
                                Format="MMMM yyyy"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Specializations Section -->
            <Frame Padding="15" 
                   BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
                   BorderColor="{StaticResource Gray200}"
                   CornerRadius="12">
                <VerticalStackLayout Spacing="8">
                    <Label Text="â­ Specializations" 
                           FontSize="13"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}"/>
                    <Label Text="Separate multiple specializations with commas" 
                           FontSize="11"
                           TextColor="{StaticResource Gray500}"/>
                    <Entry x:Name="SpecializationsEntry" 
                           Placeholder="e.g., Cardiology, Pediatrics, Surgery"
                           FontSize="16"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Action Buttons -->
            <VerticalStackLayout Spacing="12" Margin="0,10,0,20">
                <Button Text="ðŸ’¾ Save Physician" 
                        Clicked="OnSaveClicked"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        FontSize="16"
                        FontAttributes="Bold"
                        HeightRequest="50"
                        CornerRadius="12"/>
                
                <Button x:Name="DeleteButton"
                        Text="ðŸ—‘ï¸ Delete Physician" 
                        Clicked="OnDeleteClicked"
                        IsVisible="False"
                        BackgroundColor="#DC3545"
                        TextColor="White"
                        FontSize="16"
                        FontAttributes="Bold"
                        HeightRequest="50"
                        CornerRadius="12"/>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>