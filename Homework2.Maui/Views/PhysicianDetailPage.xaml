<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Homework2.Maui.Views.PhysicianDetailPage"
             Title="Physician Details">
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Label Text="Physician Name" />
            <Entry x:Name="NameEntry" Placeholder="Enter name" />

            <Label Text="License Number" />
            <Entry x:Name="LicenseEntry" Placeholder="Enter license number" />

            <Label Text="Graduation Date" />
            <DatePicker x:Name="GraduationPicker" />
            
            <Label Text="Specializations (comma-separated)" />
            <Entry x:Name="SpecializationsEntry" Placeholder="e.g., Cardiology, Pediatrics" />

            <HorizontalStackLayout Spacing="10" Margin="0,15,0,0">
                <Button Text="Save" 
                        Clicked="OnSaveClicked" />
                <Button x:Name="DeleteButton"
                        Text="Delete" 
                        Clicked="OnDeleteClicked"
                        IsVisible="False"
                        BackgroundColor="Red" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>